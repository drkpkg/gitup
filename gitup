#!/bin/bash

# Original GitUp script
# Federico Dami√°n Schonborn (feskyde)
# 2015

# Modified by drkpkg :D

case $1 in
  "--help"|"")
    echo "Use: gitup commit_message branch"
    ;;
  *)
    echo "Adding files..."
    git add .
    echo ""
    echo "Adding message to commit..."
    git commit -m "$1"
    echo ""
    echo "Pushing to $2 branch..."
    git push origin "$2"
    echo ""
    ;;
esac
